<%= flash[:notice] %>
<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>

    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td>
          <%= link_to 'Show', book_path(book), class: 'btn btn-primary' %>
          <a href="/books/<%= book.id %>/edit" class="btn btn-secondary">Edit</a>
          <%= link_to 'Destroy', book_path(book), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %> <!-- Destroyリンク -->
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<!-- 投稿フォーム -->
<h1>New book</h1>
<% if @book.errors.any? %>
  <%= @book.errors.count %> errors prohibited this book from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>


<%= form_with model: @book do |f| %>
    <div class="field">
    <label for="book_title">Title</label>
    <%= f.text_field :title %>
  　</div>

  <div class="field">
    <label for="book_body">Body</label>
    <%= f.text_area :body %>
  </div>

  <div class="actions">
    <%= f.submit 'Create Book' %>
  </div>
<% end %>